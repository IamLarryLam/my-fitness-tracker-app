datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  name      String?
  workouts  Workout[]
  plans     Plan[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Workout {
  id        String    @id @default(cuid())
  date      DateTime  @default(now())
  type      String    // 'strength' | 'cardio' | 'flexibility'
  duration  Int       // in minutes
  intensity Int       // 1-5
  mood      Int       // 1-5
  notes     String?
  exercises Exercise[]
  plan      Plan?     @relation(fields: [planId], references: [id])
  planId    String?
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Plan {
  id          String    @id @default(cuid())
  name        String
  description String?
  type        String    // 'strength' | 'cardio' | 'flexibility'
  duration    Int       // in minutes
  exercises   Exercise[]
  workouts    Workout[]
  user        User      @relation(fields: [userId], references: [id])
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Exercise {
  id        String    @id @default(cuid())
  name      String
  sets      Int?
  reps      Int?
  weight    Float?
  restTime  Int?      // in seconds
  workout   Workout?  @relation(fields: [workoutId], references: [id])
  workoutId String?
  plan      Plan?     @relation(fields: [planId], references: [id])
  planId    String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
